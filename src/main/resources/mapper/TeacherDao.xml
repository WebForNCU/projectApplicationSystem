<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.security.dao.TeacherDao">
    <resultMap id="result" type="com.spring.security.entity.Teacher">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="teacher_name" property="teacher_name" jdbcType="VARCHAR" />
        <result column="fill_info" property="fill_info" jdbcType="VARCHAR" />
        <result column="item_name" property="item_name" jdbcType="VARCHAR" />
    </resultMap>
    <select id="queryTeacherByName" resultMap="result">
        select fill_info from teacher where teacher_name = #{teacher_name};
    </select>
    <select id="getTeacherIdByName" resultType="Integer">
        select id from teacher where teacher_name = #{teacher_name};
    </select>
</mapper>